{
  "name": "react-forms",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "<rootDir>/packages/**/*.{ts,tsx}"
    ],
    "testMatch": [
      "<rootDir>/packages/**/*.test.{ts,tsx}"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/examples/"
    ]
  },
  "scripts": {
    "release": "lerna run clean && lerna run build && lerna publish",
    "postinstall": "lerna run build",
    "example": "yarn --cwd examples/app start",
    "start": "lerna run --parallel build -- --watch",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "test": "TZ=America/New_York jest",
    "format": "prettier --write '**/*.{js,ts,tsx}'",
    "format:check": "prettier --check '**/*.{js,ts,tsx}'"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@testing-library/react": "^9.3.0",
    "@testing-library/react-hooks": "^3.1.0",
    "@types/jest": "^24.0.15",
    "@types/jest-axe": "^2.2.4",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "apollo-client": "^2.6.4",
    "bili": "^4.8.1",
    "concurrently": "^5.0.0",
    "formik": "^2.0.1-rc.13",
    "graphql": "^14.5.8",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "jest-axe": "^3.2.0",
    "lerna": "^3.16.4",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.9.0",
    "rollup-plugin-typescript2": "^0.24.3",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  }
}
